{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // Add a custom type to define the path to the file
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}